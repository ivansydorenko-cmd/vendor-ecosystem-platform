# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vendor_platform_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vendor_platform_dev
DB_USER=vendor_user
DB_PASS=your_secure_password

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vendor-platform-files
S3_ENDPOINT=https://s3.amazonaws.com

# Email Service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@vendorplatform.com
EMAIL_FROM_NAME=Vendor Platform

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX=1000

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# Payment Processing (if using Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Notification Settings
DOCUMENT_REMINDER_DAYS=60,30,5
WORK_ORDER_EXPIRY_HOURS=24

# Development Tools
ENABLE_API_DOCS=true
ENABLE_REQUEST_LOGGING=true